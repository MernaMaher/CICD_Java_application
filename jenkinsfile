pipeline{
    agent any
    stages{
        stage("sonar quality check"){
            agent{
                docker {
                    image 'openjdk:11'
                }
            }
            steps{
              script{
                  withSonarQubeEnv(credentialsId: 'sonar-token') {
                      sh 'sudo chmod 666 /var/run/docker.sock'
                      sh 'chmod +x gradlew'
                      sh './gradlew sonarqube'
                  
                }

              }
            }
            
        }
    }
    post{
        always{
            echo "SUCCESS"
        }
       
    }
}